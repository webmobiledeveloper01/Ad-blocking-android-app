<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="#c3c3c3"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnrollmentFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:backgroundTint="#ec1c24"
        app:cardCornerRadius="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <com.iambedant.text.OutlineTextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAYMENT - תשלום"
                android:layout_gravity="center"
                android:fontFamily="@font/stymie_becker_black"
                android:textColor="@android:color/white"
                android:textSize="36sp"
                app:outlineColor="@color/black"
                 />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="תשלום ראשוני 100 שקל או 27.36 דולר"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:text="חד-פעמי לשנה."
                android:layout_height="wrap_content"/>



           <TextView
               android:textSize="20sp"
               android:gravity="center"
               android:textColor="@color/black"
               android:fontFamily="@font/roboto_medium"
               android:layout_width="match_parent"
               android:text="Initial payment LIS100 or 27.36$ one .time per year"
               android:layout_height="wrap_content"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:textSize="20sp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="לתשלום-100ש'ח"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:gravity="center"
                android:fontFamily="@font/roboto_medium"
                android:text="for payment-27.36$"
                android:layout_height="wrap_content"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:gravity="center"
                android:fontFamily="@font/roboto_medium"
                android:text="Payment Methods - שיטות תשלום"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/paypalbtn"
                android:padding="-30dp"
                android:layout_gravity="center"
                android:layout_width="70dp"
                android:src="@drawable/paypal"
                android:layout_height="70dp"/>




        </LinearLayout>
    </androidx.cardview.widget.CardView>




    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Next - הַבָּא"
        android:id="@+id/next3"
        android:textColor="@color/white"
        android:backgroundTint="#3891f5"
        app:cornerRadius="10dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="end"
        android:layout_height="wrap_content"/>

</LinearLayout>