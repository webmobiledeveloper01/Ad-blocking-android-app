<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/white"
        app:cardElevation="2dp"
        android:layout_width="280dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:weightSum="3"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/spl_border"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="90dp">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_baseline_menu_24"
                    android:layout_height="match_parent"/>


            </LinearLayout>

            <LinearLayout
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                >



                <com.iambedant.text.OutlineTextView
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="אפשריות"
                    android:layout_gravity="center"
                    android:fontFamily="@font/stymie_becker_black"
                    android:textColor="#38b6ff"
                    android:textSize="20sp"
                    app:outlineColor="@color/black"
                    app:outlineWidth="1.4" />

                <com.iambedant.text.OutlineTextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="POSSIBILITY"
                    android:layout_gravity="center"
                    android:fontFamily="@font/stymie_becker_black"
                    android:textColor="#ec1c24"
                    android:textSize="20sp"
                    app:outlineColor="@color/black"
                    app:outlineWidth="1.1" />


            </LinearLayout>




        </LinearLayout>



    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/white"
        app:cardElevation="2dp"
        android:layout_width="280dp"
        android:layout_height="80dp">

        <LinearLayout
            android:weightSum="3"
            android:background="@drawable/border"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/refresh"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
            
            <LinearLayout
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                >

                <com.iambedant.text.OutlineTextView
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="רענון"
                    android:layout_gravity="center"
                    android:fontFamily="@font/stymie_becker_black"
                    android:textColor="#38b6ff"
                    android:textSize="25sp"
                    app:outlineColor="@color/black"
                    app:outlineWidth="1.4" />

                <com.iambedant.text.OutlineTextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="REFRESHMENT"
                    android:layout_gravity="center"
                    android:fontFamily="@font/stymie_becker_black"
                    android:textColor="#ec1c24"
                    android:textSize="25sp"
                    app:outlineColor="@color/black"
                    app:outlineWidth="1.1" />


            </LinearLayout>




        </LinearLayout>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/white"
        app:cardElevation="2dp"
        android:layout_width="280dp"
        android:layout_height="80dp">

        <LinearLayout
            android:weightSum="3"
            android:background="@drawable/border"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/support"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/support_ll"
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                >

                <com.iambedant.text.OutlineTextView
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="תמיכה"
                    android:layout_gravity="center"
                    android:fontFamily="@font/stymie_becker_black"
                    android:textColor="#38b6ff"
                    android:textSize="25sp"
                    app:outlineColor="@color/black"
                    app:outlineWidth="1.4" />

                <com.iambedant.text.OutlineTextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SUPPORT"
                    android:layout_gravity="center"
                    android:fontFamily="@font/stymie_becker_black"
                    android:textColor="#ec1c24"
                    android:textSize="25sp"
                    app:outlineColor="@color/black"
                    app:outlineWidth="1.1" />


            </LinearLayout>




        </LinearLayout>



    </androidx.cardview.widget.CardView>


</LinearLayout>